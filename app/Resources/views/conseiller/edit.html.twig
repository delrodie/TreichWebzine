{% extends 'backend.html.twig' %}

{% block title %}{{ parent() }} Modification de la biographie du Conseiller{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>Modifcation de la biographie du Conseiller</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ absolute_url(path('backend'))}}"><i class="fa fa-home"></i> Accueil</a></li>
            <li class="breadcrumb-item"><a href="{{ absolute_url(path('backend_conseiller_index'))}}">Conseiller</a></li>
            <li class="breadcrumb-item active">Modification de la biographie du Conseiller</li>
        </ol>
    </section>
    <section class="content">
        <div class="row">
            <div class="box box-warning">
                <div class="box-header text-right">
                    <a href="{{ absolute_url(path('backend_conseiller_index'))}}" class="btn btn-social btn-primary"><i class="fa fa-list"></i>Voir la liste des biographie</a>
                </div>
                <div class="box-body">
                    <div class="row justify-content-center">
                        <div class="col-12">
                            {{ form_start(edit_form, {'attr':{'class':'form-horizontal'}}) }}
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6">
                                    <div class="form-group">
                                        <label class="col-sm-12 control-label text-left">Identite</label>
                                        <div class="col-sm-12">
                                            {{ form_widget(edit_form.identite)}}
                                            <span class="help-block">{{ form_errors(edit_form.identite)}}</span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-12 control-label text-left">Titre</label>
                                        <div class="col-sm-12">
                                            {{ form_widget(edit_form.titre)}}
                                            <span class="help-block">{{ form_errors(edit_form.titre)}}</span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-12 control-label text-left">Mots clés</label>
                                        <div class="col-sm-12">
                                            {{ form_widget(edit_form.tags)}}
                                            <span class="help-block">{{ form_errors(edit_form.tags)}}</span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-12 control-label text-left">Facebook</label>
                                        <div class="col-sm-12">
                                            {{ form_widget(edit_form.facebook)}}
                                            <span class="help-block">{{ form_errors(edit_form.facebook)}}</span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-12 control-label text-left">Twitter</label>
                                        <div class="col-sm-12">
                                            {{ form_widget(edit_form.twitter)}}
                                            <span class="help-block">{{ form_errors(edit_form.twitter)}}</span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-12 control-label text-left">Telecharger la photo</label>
                                        <div class="col-sm-12">
                                            {{ form_widget(edit_form.imageFile)}}
                                            <span class="help-block">{{ form_errors(edit_form.imageFile)}}</span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-sm-12 control-label text-left"></div>
                                        <div class="checkbox col-sm-12">
                                            {{ form_widget(edit_form.statut)}}
                                            <label for="appbundle_conseiller_statut">Activé</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6">
                                    <div class="form-group">
                                        <label for="" class="col-sm-12 control-label text-left">Biographie</label>
                                        <div class="col-sm-12">
                                            {{ form_widget(edit_form.biographie)}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{ form_rest(edit_form) }}
                            <div class="box-footer text-right">
                                <a href="{{ absolute_url('backend_conseiller_index') }}" class="btn btn-default">Annuler</a>
                                <button type="submit" class="btn btn-info">Modifier</button>
                            </div>
                            {{ form_end(edit_form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}

{% block stylesheets %}
    {{ parent()}}
    {% stylesheets
        'backoffice/assets/vendor_plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.css'
        'backoffice/tags/tagsinput.css'
        filter='cssrewrite' output='backoffice/css/editeur.css'
    %}
        <link rel="stylesheet" href="{{ absolute_url(asset_url)}}" />
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{ parent()}}
    {% javascripts
        'backoffice/assets/vendor_plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.js'
        'backoffice/js/pages/editor.js'
        'backoffice/tags/tagsinput.js'
        output='backoffice/js/editeur.js'
    %}
        <script src="{{ absolute_url(asset_url)}}"></script>

    {% endjavascripts %}
{% endblock %}

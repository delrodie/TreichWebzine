{% extends 'backend.html.twig' %}

{% block title %}{{ parent() }} Enregistrement de la biographie du Maire{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>Enregistrement de la biographie du Maire</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ absolute_url(path('backend'))}}"><i class="fa fa-home"></i> Accueil</a></li>
            <li class="breadcrumb-item"><a href="{{ absolute_url(path('backend_maire_index'))}}">Maire</a></li>
            <li class="breadcrumb-item active">Enregistrement de la biographie du Maire</li>
        </ol>
    </section>
    <section class="content">
        <div class="row">
            <div class="box box-warning">
                <div class="box-header text-right">
                    <a href="{{ absolute_url(path('backend_maire_index'))}}" class="btn btn-social btn-primary"><i class="fa fa-list"></i>Voir la biographie</a>
                </div>
                <div class="box-body">
                    <div class="row justify-content-center">
                        <div class="col-12">
                            {{ form_start(form, {'attr':{'class':'form-horizontal'}}) }}
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6">
                                    <div class="form-group">
                                        <label class="col-sm-12 control-label text-left">Identite</label>
                                        <div class="col-sm-12">
                                            {{ form_widget(form.identite)}}
                                            <span class="help-block">{{ form_errors(form.identite)}}</span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-12 control-label text-left">Mots clés</label>
                                        <div class="col-sm-12">
                                            {{ form_widget(form.tags)}}
                                            <span class="help-block">{{ form_errors(form.tags)}}</span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-12 control-label text-left">Telecharger la photo</label>
                                        <div class="col-sm-12">
                                            {{ form_widget(form.imageFile)}}
                                            <span class="help-block">{{ form_errors(form.imageFile)}}</span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-sm-12 control-label text-left"></div>
                                        <div class="checkbox col-sm-12">
                                            {{ form_widget(form.statut)}}
                                            <label for="appbundle_maire_statut">Activé</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6">
                                    <div class="form-group">
                                        <label for="" class="col-sm-12 control-label text-left">Biographie</label>
                                        <div class="col-sm-12">
                                            {{ form_widget(form.contenu)}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{ form_rest(form) }}
                            <div class="box-footer text-right">
                                <button type="reset" class="btn btn-default">Annuler</button>
                                <button type="submit" class="btn btn-info">Enregistrer</button>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}

{% block stylesheets %}
    {{ parent()}}
    {% stylesheets
        'backoffice/assets/vendor_plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.css'
        'backoffice/tags/tagsinput.css'
        filter='cssrewrite' output='backoffice/css/editeur.css'
    %}
        <link rel="stylesheet" href="{{ absolute_url(asset_url)}}" />
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{ parent()}}
    {% javascripts
        'backoffice/assets/vendor_plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.js'
        'backoffice/js/pages/editor.js'
        'backoffice/tags/tagsinput.js'
        output='backoffice/js/editeur.js'
    %}
        <script src="{{ absolute_url(asset_url)}}"></script>

    {% endjavascripts %}
{% endblock %}

{% extends 'backend.html.twig' %}

{% block title %}{{ parent () }} Liste des presentation des municipalités{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>Liste des presentations de la municipalite</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ absolute_url(path('backend'))}}"><i class="fa fa-home"></i> Accueil</a></li>
            <li class="breadcrumb-item"><a href="{{ absolute_url(path('backend_municipalite_index'))}}">municipalite</a></li>
            <li class="breadcrumb-item active">Liste des presentation de la municipalité</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="box box-warning">
            <div class="box-header text-right">
                <a href="{{ absolute_url(path('backend_municipalite_new'))}}" class="btn btn-social btn-primary"><i class="fa fa-plus"></i>Ajouter une presentation</a>
            </div>

            <div class="row">
                {% for municipalite in municipalites %}
                    <div class="col-md-12 col-lg-3">
                        <div class="box box-default" style="height: 500px">
                            <img class="card-img-top img-responsive" src="{{ vich_uploader_asset(municipalite, 'imageFile') }}" alt="Card image cap">
                            <div class="box-body">
                                <h4 class="card-title">
                                    {% if municipalite.statut %}
                                        <span class="badge badge-success">Activé</span>
                                    {% else %}
                                        <span class="badge badge-danger">Désactivé</span>
                                    {% endif %}
                                    {{ municipalite.titre }}
                                </h4>
                                <p class="card-text text-justify">{{ municipalite.resume|raw }}</p>
                                <div class="btn-group" role="group" aria-label="Basic example">
                                    <a href="{{ absolute_url(path('backend_municipalite_edit', {'slug': municipalite.slug})) }}" >
                                        <button type="button" class="btn btn-primary"><i class="fa fa-edit"></i> Modifier</button>
                                    </a>
                                    <a href="{{ absolute_url(path('backend_municipalite_show', {'slug': municipalite.slug})) }}" >
                                        <button type="button" class="btn btn-primary"><i class="fa fa-eye"></i> Consulter</button>
                                    </a>
                                </div>
                            </div>

                        </div>
                        <!-- /.box -->
                    </div>
                {% else %}

                {% endfor %}
            </div>

    </section>
{% endblock %}

{% extends 'backend.html.twig' %}

{% block title %}{{ parent() }} Modification des sliders{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>Modification d'un slider</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ absolute_url(path('backend'))}}"><i class="fa fa-home"></i> Accueil</a></li>
            <li class="breadcrumb-item"><a href="{{ absolute_url(path('backend_slider_index'))}}">slider</a></li>
            <li class="breadcrumb-item active">Modification d'un nouveau slider</li>
        </ol>
    </section>
    <section class="content">
        <div class="row">
            <div class="box box-warning">
                <div class="box-header text-right">
                    <a href="{{ absolute_url(path('backend_slider_index'))}}" class="btn btn-social btn-primary"><i class="fa fa-list"></i>Liste des sliders</a>
                </div>
                <div class="box-body">
                    <div class="row justify-content-center">
                        <div class="col-12">
                            {{ form_start(edit_form, {'attr':{'class':'form-horizontal'}}) }}
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6">
                                    <div class="form-group">
                                        <label class="col-sm-12 control-label text-left">Type</label>
                                        <div class="col-sm-12">
                                            {{ form_widget(edit_form.type)}}
                                            <span class="help-block">{{ form_errors(edit_form.type)}}</span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-12 control-label text-left">Titre</label>
                                        <div class="col-sm-12">
                                            {{ form_widget(edit_form.titre)}}
                                            <span class="help-block">{{ form_errors(edit_form.titre)}}</span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-12 control-label text-left">Lien associé</label>
                                        <div class="col-sm-12">
                                            {{ form_widget(edit_form.lien)}}
                                            <span class="help-block">{{ form_errors(edit_form.lien)}}</span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <label for="" class="col-sm-12 control-label text-left">Periode de publication</label>
                                        <div class="form-group col-sm-6" id="webzine-datepicker">
                                            <div class="input-group date">
                                                {{ form_widget(edit_form.datedeb) }}
                                                <div class="input-group-addon">
                                                    <i class="fa fa-calendar-o"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group col-sm-6" id="webzine-datepicker">
                                            <div class="input-group date">
                                                {{ form_widget(edit_form.datefin) }}
                                                <div class="input-group-addon">
                                                    <i class="fa fa-calendar-o"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6">
                                    <div class="form-group">
                                        <label for="" class="col-sm-12 control-label text-left">Contenu</label>
                                        <div class="col-sm-12">
                                            {{ form_widget(edit_form.contenu)}}
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-12 control-label text-left">Telecharger l'illustration</label>
                                        <div class="col-sm-12">
                                            {{ form_widget(edit_form.imageFile)}}
                                            <span class="help-block">{{ form_errors(edit_form.imageFile)}}</span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-sm-12 control-label text-left"></div>
                                        <div class="checkbox col-sm-12">
                                            {{ form_widget(edit_form.statut)}}
                                            <label for="appbundle_slider_statut">Activé</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{ form_rest(edit_form) }}
                            <div class="box-footer text-right">
                                <a href="{{ absolute_url(path('backend_slider_index')) }}" class="btn btn-default">Annuler</a>
                                <button type="submit" class="btn btn-info">Modifier</button>
                            </div>
                            {{ form_end(edit_form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}

{% block stylesheets %}
    {{ parent()}}
    {% stylesheets
        'backoffice/assets/vendor_components/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css'
        filter='cssrewrite' output='backoffice/css/datepicker.css'
    %}
        <link rel="stylesheet" href="{{ absolute_url(asset_url)}}" />
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{ parent()}}
    {% javascripts
        'backoffice/assets/vendor_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js'
        'backoffice/js/pages/bootstrap-datepicker.fr.min.js'
        output='backoffice/js/datepicker.js'
    %}
        <script src="{{ absolute_url(asset_url)}}"></script>
    {% endjavascripts %}
    <script>
        $('#webzine-datepicker input').datepicker({
            format: "yyyy-mm-dd",
            todayBtn: "linked",
            clearBtn: true,
            language: "fr",
            multidate: false,
            autoclose: true
        });
    </script>
{% endblock %}

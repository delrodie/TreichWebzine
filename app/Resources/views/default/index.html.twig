{% block title %} TreichWebzine :: Magazine web de la commune de treichville {% endblock %}
{% block body %}
    <div class="caroufredsel_wrapper caroufredsel_wrapper_slider">
        <ul class="slider">
            {% for slider in sliders %}
                <li class="slide">
                    {% if slider.imageName %}
                        <img class="img-responsive" src="{{ asset('uploads/sliders/'~ slider.imageName) | imagine_filter('sliders') }}" alt="{{ slider.titre }}" />
                    {% else %}
                        <img class="img-responsive" src="{{ asset('backoffice/images/user-info.jpg') | imagine_filter('sliders') }}" alt="{{ slider.titre }}">
                    {% endif %}
                    <div class="slider_content_box">
                        <ul class="post_details simple">
                            <li class="category"><a href="#" title="{{ slider.type.libelle|upper }}">{{ slider.type.libelle|upper }}</a></li>
                        </ul>
                        <h2><a href="#" title="{{ slider.titre }}">{{ slider.titre }}</a></h2>
                        <p class="clearfix">{{ slider.contenu|raw }}</p>
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>

<h4 class="box_header ">Treich Infos</h4>
<div class="vertical_carousel_container clearfix">
    <ul class="blog small vertical_carousel autoplay-1 scroll-1 navigation-1 easing-easeInOutQuint duration-750">
        {% for info in infos %}
            <li class="post">
                <a href="{{ absolute_url(path('frontend_information_show', {'type': info.typinfo.slug, 'slug': info.slug})) }}" title="{{ info.titre }}">
                    <span class="icon small gallery"></span>
                    {% if info.imageName %}
                        <img class="img-responsive" src="{{ asset('uploads/information/'~ info.imageName) | imagine_filter('accueil_treich_info') }}" alt="{{ info.titre }}" />
                    {% else %}
                        <img class="img-responsive" src="{{ asset('backoffice/images/user-info.jpg') | imagine_filter('accueil_treich_info') }}" alt="{{ info.titre }}">
                    {% endif %}
                </a>
                <div class="post_content">
                    <h5>
                        <a href="{{ absolute_url(path('frontend_information_show', {'type': info.typinfo.slug, 'slug': info.slug})) }}" title="{{ info.titre }}">{{ info.titre }}</a>
                    </h5>
                    <ul class="post_details simple">
                        <li class="category"><a href="{{ absolute_url(path('frontend_information_show', {'type': info.typinfo.slug, 'slug': info.slug})) }}" title="{{ info.typinfo.libelle }}">{{ info.typinfo.libelle }}</a></li>
                        <li class="date">{{ info.publieLe|date('d M Y') }}</li>
                    </ul>
                </div>
            </li>
        {% endfor %}
    </ul>
</div>

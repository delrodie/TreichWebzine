<h4 class="box_header page_margin_top_section">Dossiers</h4>
<ul class="blog small clearfix">
    {% for dossier in dossiers %}
        <li class="post">
            <a href="#" title="{{ dossier.titre }}">
                {% if dossier.imageName %}
                    <img class="img-responsive" src="{{ asset('uploads/dossiers/'~ dossier.imageName) | imagine_filter('accueil_treich_info') }}" alt="{{ dossier.titre }}" />
                {% else %}
                    <img class="img-responsive" src="{{ asset('backoffice/images/user-info.jpg') | imagine_filter('accueil_treich_info') }}" alt="{{ dossier.titre }}">
                {% endif %}
            </a>
            <div class="post_content">
                <h5>
                    <a href="#" title="{{ dossier.titre }}">{{ dossier.titre }}</a>
                </h5>
                <ul class="post_details simple">
                    <li class="category"><a href="#" title="{{ dossier.type.libelle|upper }}">{{ dossier.type.libelle|upper }}</a></li>
                    <li class="date">{{ dossier.publieLe|date('d M Y') }}</li>
                </ul>
            </div>
        </li>
    {% endfor %}
</ul>

